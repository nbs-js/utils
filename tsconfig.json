{
  "compilerOptions": {
    "target": "es5",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "incremental": true
  },
  "include": ["**/*.ts", "src/**/*"],
  "exclude": ["node_modules", "test"],
  "moduleResolution": ["node_modules", ".next", "node"]
}
